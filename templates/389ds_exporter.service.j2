{{ ansible_managed | comment}}

[Unit]
Description=Prometheus 389ds_exporter
After=network-online.target
StartLimitInterval=0

[Service]
Type=simple
User={{ 389ds_exporter_system_user }}
Group={{ 389ds_exporter_system_group }}
ExecStart=/usr/local/bin/389ds_exporter \
  -ipa-domain="{{ 389ds_ipa_domain }} \
  -ldap.addr="{{ 389ds_scrape_address }}" \
  -ldap.user="{{ 389ds_user }}" \
  -ldap.pass="{{ 389ds_password }}" \
  -interval="{{ 389ds_scrape_interval }}" \
  -web.listen-address={{ 389ds_exporter_web_listen_address }}{% for flag, flag_value in 389ds_config_flags_extra.items() %}\
  -{{ flag }}{% if flag_value %}={{ flag_value }}{% endif %} {% endfor %}

PrivateTmp=true
PrivateDevices=true
ProtectHome=true
NoNewPrivileges=true
{% if 389ds_exporter_systemd_version.stdout | int >= 232 %}
ProtectSystem=strict
ProtectControlGroups=true
ProtectKernelModules=true
ProtectKernelTunables=true
{% else %}
ProtectSystem=full
{% endif %}

{% if http_proxy is defined %}
Environment="HTTP_PROXY={{ http_proxy }}"{% if https_proxy is defined %} "HTTPS_PROXY={{ https_proxy }}{% endif %}"
{% endif %}

SyslogIdentifier=389ds_exporter
Restart=always
RestartSec=0

[Install]
WantedBy=multi-user.target
